@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Age Calculator</h1>
    <br />

    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        @Html.Label("Date of Birth: ")
        @Html.TextBox("SelectedDate", "", new {  })
        <input type="submit" id="submitId" value="Submit"/>
        <p id="message" class="text-danger" style="margin-right:22px;"></p>
       
        <h5 id="viewbagMessageId">@ViewBag.Message</h5>
    }
</div>
    <!-- Bootstrap -->
    <script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>
    <script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js'></script>
    <link rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css'
          media="screen"/>
    <!-- Bootstrap -->
    <!-- Bootstrap DatePicker -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css"type="text/css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"type="text/javascript"></script>
    <!-- Bootstrap DatePicker -->
    <script type="text/javascript">
        $( "form" ).on( "submit", function() {
                     
             if($("#SelectedDate").val()=="")
             {
                  document.getElementById('viewbagMessageId').innerText="";
                  document.getElementById('message').innerText = "Please Enter the date";                  
                  return false;
             }
        });
          
        $('#SelectedDate').datepicker({
            changeMonth: true,
            changeYear: true,
            format: "dd/mm/yyyy",
            language: "tr",
            null:false
        });   
    </script>

